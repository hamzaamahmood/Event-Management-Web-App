@page "/"
@inject NavigationManager navigationManager

    <div class="page">
        <div class="container">
            <form action="#">
                <div class="title">Login</div>
                <div class="content">
                    <div class="input-box underline">
                        <input type="text" placeholder="Enter Your Email" required>
                        <div class="underline"></div>
                    </div>
                    <div class="input-box">
                        <input type="password" placeholder="Enter Your Password" required>
                        <div class="underline"></div>
                    </div>
                    <div class="regist"><a @onclick="goToRegistration">Create An Account</a></div>
                    <div class="input-box button">
                        <input @onclick="goToUserHome" type="submit" name="" value="Continue">
                    </div>
                </div>
            </form>
            <div class="option content">or Connect With Social Media</div>
            <div class="google content">
                <a href="#"><i class="fab fa-google"></i>Sign in With Google</a>
            </div>
            <div class="facebook">
                <a href="#"><i class="fab fa-facebook-f"></i>Sign in With Facebook</a>
            </div>
        </div>

    </div>


    @{
        void goToRegistration()
        {
            navigationManager.NavigateTo(uri: "/registration");
        }
        
        void goToUserHome()
        {
            navigationManager.NavigateTo(uri: "/userhome");
        }
    }
